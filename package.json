{
	"name": "react-a11y-tools",
	"author": "JoÃ£o Dias",
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --coverage --passWithNoTests",
		"test:coverage": "tsdx test --coverage",
		"test:watch": "tsdx test --watch",
		"format:fix": "npm run prettier:base -- --write 'src/**/*.{ts,tsx,js,jsx}'",
		"lint": "tsdx lint src --fix",
		"prettier:base": "prettier --parser typescript",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"reinstall": "rm -rf node_modules && npm run clean && npm install"
	},
	"peerDependencies": {
		"react": ">=16"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": false,
		"semi": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"module": "dist/react-a11y-tools.esm.js",
	"size-limit": [
		{
			"path": "dist/react-a11y-tools.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/react-a11y-tools.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@size-limit/preset-small-lib": "^4.9.1",
		"@storybook/addon-essentials": "^6.1.11",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.1.11",
		"@storybook/addons": "^6.1.11",
		"@storybook/react": "^6.1.11",
		"@testing-library/jest-dom": "5.11.8",
		"@testing-library/react": "11.2.2",
		"@testing-library/react-hooks": "3.7.0",
		"@testing-library/user-event": "12.6.0",
		"@types/jest": "26.0.19",
		"@types/node": "14.14.19",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@typescript-eslint/eslint-plugin": "4.11.1",
		"@typescript-eslint/parser": "4.11.1",
		"babel-loader": "^8.2.2",
		"eslint": "7.17.0",
		"eslint-config-prettier": "7.1.0",
		"eslint-import-resolver-typescript": "2.3.0",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-jest": "24.1.3",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-prettier": "3.3.0",
		"eslint-plugin-react": "7.22.0",
		"eslint-plugin-react-hooks": "4.2.0",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"raf": "^3.4.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-is": "^17.0.1",
		"size-limit": "^4.9.1",
		"tsconfig-paths-webpack-plugin": "^3.3.0",
		"tsdx": "^0.14.1",
		"tslib": "^2.0.3",
		"typescript": "^4.1.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,html,css}": [
			"npm run format:fix",
			"tsdx lint",
			"git add"
		]
	}
}
